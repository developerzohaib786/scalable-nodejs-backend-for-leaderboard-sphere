{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",      // Source files location
    "outDir": "./dist",      // Compiled JavaScript output location
    "strict": true,          // Enable all strict type-checking options (recommended)
    "esModuleInterop": true, // Enables compatibility between CommonJS and ES modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],  // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
